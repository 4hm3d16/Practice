#include <iostream>

using namespace std;

int main()
{
    int n = 0;
    cout<<"Please enter length of square"<<endl;
    cin>>n;

    for(int i = 0; i < n ; i++)
    {
        if(i == 0 || i == n - 1){
        for(int j = 0; j < n; j++)
        {
            cout << "*" ;
        }}
        else if(i > 0 && i < n)
        {
            for(int j = 0; j < n; j++){
            if(j == 0 || j == n-1)
                 cout << "*" ;
            else
                cout<<" ";}
        }

        cout<<endl;
    }

    return 0;
}
